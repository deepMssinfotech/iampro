<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".WelcomeActivity">
    <LinearLayout android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center" >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="0"
                android:src="@drawable/iampro" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/loginbglayout"
            android:layout_weight="0"
            android:elevation="20dp"
            android:layout_height="200dp"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/loginlayout"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imguser"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/iampro" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imguser"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="Iampro"
                    android:textSize="12dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/loginimage"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="0dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="22dp"
                    app:civ_border_color="#999"
                    app:civ_border_width="1dp"
                    android:id="@+id/imglogin"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/welcome_newuser_login" />
                <TextView
                    android:layout_below="@+id/imglogin"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:text="Login"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/signupimage"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="22dp"
                    app:civ_border_color="#999"
                    app:civ_border_width="1dp"
                    android:id="@+id/imgsignup"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/welcome_newuser" />
                <TextView
                    android:layout_below="@+id/imgsignup"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Signup"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp">

                <ImageView
                    android:padding="20dp"
                    android:id="@+id/imghome"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="0"
                    android:src="@drawable/iampro" />

                <TextView
                    android:layout_width="match_parent"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imghome"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="Iampro"
                    android:textSize="12dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>