<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="10dp"
    android:layout_margin="5dp"
    card_view:cardMaxElevation="30dp">
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/trans_black"
      android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_user"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:src="@drawable/iampro"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">
      <TextView
          android:id="@+id/fullname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="17sp"
          android:text="name"/>
      <TextView
          android:id="@+id/udate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:text="time ago"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_icon"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:src="@drawable/iampro"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"/>
  </LinearLayout>

     <LinearLayout
         android:id="@+id/ll_showhide"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:visibility="gone"
         android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/detail_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textSize="17sp"
                 android:padding="10dp"
                 android:text="name"/>
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/purchese_cost"
                 android:layout_width="wrap_content"
                  android:textSize="17sp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="end"
                 android:gravity="end"
                 android:padding="10dp"
                 android:layout_weight="0"
                 android:text="purchese_cost"/>
             <TextView
                 android:id="@+id/selling_cost"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                  android:textSize="17sp"
                 android:layout_gravity="end"
                 android:gravity="end"
                 android:padding="10dp"
                 android:layout_weight="0"
                 android:text="selling_cost"/>
         </LinearLayout>
         <View
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="@color/trans_black">
         </View>
     </LinearLayout>

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_marginTop="0dp"
      android:src="@drawable/profile_background"
      android:scaleType="fitXY"
      android:layout_height="150dp"/>
      <VideoView
          android:id="@+id/videoView"
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:visibility="gone"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/trans_black"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">
     <ImageView
         android:id="@+id/iv_favourite"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_marginRight="10dp"
         android:layout_weight="1"
         android:layout_gravity="center"
         android:visibility="gone"
         android:layout_marginLeft="10dp"
         android:src="@drawable/baseline_favorite_border_white_18dp"/>
      <ImageView
          android:id="@+id/iv_buy"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginRight="10dp"
          android:layout_weight="1"
          android:layout_gravity="center"
         android:visibility="gone"
          android:layout_marginLeft="10dp"
          android:src="@drawable/profile_box_buy"/>
    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:isIndicator="false"
        android:rating="4"
        android:padding="10dp"
        android:stepSize="0.3"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:orientation="horizontal">
      <ImageView
          android:id="@id/iv_comments"
          android:layout_width="20dp"
          android:layout_height="20dp"

          android:src="@drawable/comment"/>
      <TextView
          android:id="@+id/tv_comments"
          android:layout_marginLeft="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:textSize="17sp"
          android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:orientation="horizontal">
      <ImageView
          android:id="@+id/ivLike"
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:src="@drawable/like"/>
      <TextView
          android:id="@+id/tv_totallike"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:layout_marginLeft="10dp"
          android:layout_gravity="center_horizontal"
          android:textSize="17sp"
          android:textStyle="bold"
          android:text=""/>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>