<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans_black"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_user"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/iampro"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/udate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="time ago" />
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_icon"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/iampro"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_showhide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="name"
                    android:textSize="17sp" />
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/purchese_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0"
                    android:gravity="end"
                    android:padding="10dp"
                    android:text="purchese_cost"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/selling_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0"
                    android:gravity="end"
                    android:padding="10dp"
                    android:text="selling_cost"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/trans_black"></View>
        </LinearLayout>
        <LinearLayout
            android:background="@color/black"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:visibility="gone" android:id="@+id/imageView" android:layout_width="match_parent" android:layout_height="wrap_content" />
            <bg.devlabs.fullscreenvideoview.FullscreenVideoView
                android:visibility="gone"
                android:id="@+id/fullscreenVideoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.smarteist.autoimageslider.SliderLayout
                android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:id="@+id/imageSlider"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans_black"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/favLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:visibility="gone"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="10dp">
                <com.like.LikeButton
                    android:layout_gravity="left"
                    card_view:icon_type="heart"
                    app:icon_size="20dp"
                    android:id="@+id/favButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_buy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/profile_box_buy"
                android:visibility="gone" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp">
            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:isIndicator="false"
                android:rating="4"
                android:numStars="5"
                android:stepSize="0.3" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@id/iv_comments"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment" />
                <TextView
                    android:id="@+id/tv_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="15"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.like.LikeButton
                    app:like_drawable="@drawable/like_un"
                    app:unlike_drawable="@drawable/like"
                    app:icon_size="20dp"
                    android:id="@+id/likeButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/tv_totallike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="10"/>
            </LinearLayout>
        </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:id="@+id/recycler_view_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
        <View
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trans_black"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <EditText
            android:layout_weight="1"
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:ems="10"
            android:hint="Write Your Comment"
            android:inputType="textMultiLine"
            android:maxWidth="20dp"
            android:maxHeight="50dp"
            android:scrollbarAlwaysDrawVerticalTrack="true" />
        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="40dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/choice"
            android:layout_alignParentRight="true"
            android:onClick="sendComment"
            android:layout_gravity="right"
            />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>