<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@drawable/black"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="@dimen/header_image_margin"
            android:layout_width="@dimen/header_image_width"
            android:layout_height="@dimen/header_image_height"
            android:src="@drawable/iampro"/>
        <ImageView
            android:layout_margin="@dimen/header_image_margin"
            android:layout_width="@dimen/header_image_width"
            android:layout_height="@dimen/header_image_height"
            android:src="@drawable/headerwallet"/>
        <ImageView
            android:layout_margin="@dimen/header_image_margin"
            android:layout_width="@dimen/header_image_width"
            android:layout_height="@dimen/header_image_height"
            android:src="@drawable/headerbrowser"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded"
            android:hint="Search"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:layout_margin="@dimen/header_image_margin"
            android:drawableLeft="@drawable/search_left_icon" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>