<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
     android:gravity="center_vertical"
    android:layout_marginBottom="-15dp"
    android:elevation="@dimen/margin_huge"
    android:padding="@dimen/activity_horizontal_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_accent"
        android:id="@+id/text_view_user_alphabet"
        android:gravity="center"
        android:maxEms="1"

        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/grey_100"
        android:textStyle="bold"
        android:text="a" />
    
    <android.support.v4.widget.Space
        android:layout_width="@dimen/space_avg"
        android:layout_height="wrap_content"
        android:id="@+id/space"
        android:layout_toRightOf="@+id/text_view_user_alphabet"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_user_name"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/space"
        android:ellipsize="end"
        android:maxLines="1"
        android:foregroundGravity="center_vertical"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="abcdxyz.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_user_urmessage"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/space"
        android:layout_below="@+id/text_view_user_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:foregroundGravity="center_vertical"
        android:textColor="@color/grey_500"
        android:text=""/>

    <TextView android:id="@+id/count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:textSize="10dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/text_view_user_time"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:text=""
        android:background="@drawable/bg_circle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_user_time"
        android:gravity="end"
        android:textAllCaps="true"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/text_view_user_name"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:layout_alignParentRight="true"
        android:foregroundGravity="center_vertical"
        android:textColor="@color/grey_400"
        android:text=""/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        android:layout_below="@+id/text_view_user_alphabet"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"/>
</RelativeLayout>
