<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />
        <ImageView
            android:id="@+id/no_record_found"
            android:visibility="gone"
            android:src="@drawable/no_results_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout android:id="@+id/llTotal"
        android:layout_above="@+id/llBottom"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:textStyle="bold"
            android:gravity="center_vertical|end"
            android:text="Total Price"/>
        <TextView android:id="@+id/tvTotalPrice"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>
    <LinearLayout android:id="@id/llBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/bClear"
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:background="@drawable/black"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Clear Cart"/>
        <Button android:id="@+id/bShop"
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:background="@drawable/black"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Shop"/>
    </LinearLayout>

</RelativeLayout>